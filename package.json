{
	"name": "screentime",
	"productName": "Screentime",
	"version": "0.1.0",
	"description": "Track how much time you spend on your computer.",
	"author": "Levminer",
	"license": "GPL-3.0",
	"scripts": {
		"start": "node scripts/alpha-build.js && electron .",
		"build": "node scripts/release-build.js && electron-builder --publish=never --x64",
		"build:alpha": "node scripts/alpha-build.js && electron-builder --publish=never --x64",
		"build:bundle": "node scripts/alpha-build.js && tsc && tailwindcss -i ./interface/styles/tailwind.css -o ./interface/styles/styles.css -c .tailwindrc.js --minify",
		"build:test": "node scripts/alpha-build.js && electron-builder --publish=never --x64 --dir -c scripts/test-build.json",
		"watch": "concurrently 'npm:watch:tw' 'npm:watch:ts'",
		"watch:tw": "tailwindcss -i ./interface/styles/tailwind.css -o ./interface/styles/styles.css -c .tailwindrc.js --minify --watch",
		"watch:ts": "tsc -w",
		"lint": "eslint --fix .",
		"eslint": "eslint ."
	},
	"main": "core/main.js",
	"build": {
		"appId": "com.levminer.screentime",
		"files": [
			"!screenshots",
			"!scripts",
			"!.*",
			"!*.ts"
		],
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"icon": "icons/icon.ico",
			"artifactName": "screentime-${version}-windows-x64-portable.zip"
		},
		"nsis": {
			"installerIcon": "icons/icon.ico",
			"uninstallerIcon": "icons/icon.ico",
			"uninstallDisplayName": "Screentime",
			"license": "LICENSE.md",
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": "always",
			"artifactName": "screentime-${version}-windows-x64-installer.exe"
		},
		"linux": {
			"target": [
				"appImage",
				"zip"
			],
			"maintainer": "levminer@levminer.com",
			"icon": "icons/icon.png",
			"category": "Utility",
			"desktop": {
				"Name": "Screentime",
				"Type": "Application"
			},
			"artifactName": "screentime-${version}-linux-x64-portable.zip"
		},
		"appImage": {
			"artifactName": "screentime-${version}-linux-x64-installer.appimage"
		},
		"mac": {
			"target": [
				"dmg",
				"zip"
			],
			"icon": "icons/icon.icns",
			"category": "public.app-category.utilities",
			"artifactName": "screentime-${version}-mac-x64-portable.zip"
		},
		"dmg": {
			"artifactName": "screentime-${version}-mac-x64-installer.dmg"
		}
	},
	"dependencies": {
		"@6c65726f79/custom-titlebar": "^0.9.1",
		"@electron/remote": "^2.0.8",
		"auto-launch": "^5.0.5",
		"chart.js": "^3.7.1",
		"dayjs": "^1.11.1",
		"electron-debug": "^3.2.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"concurrently": "^7.1.0",
		"electron": "^18.1.0",
		"electron-builder": "^23.0.3",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0-1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.10",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">=16.0.0"
	}
}
